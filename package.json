{
  "name": "jdue-cfv",
  "version": "1.0.2",
  "private": true,
  "description": "Full-stack to-do application for Cloudflare Pages (CFV of JDue)",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "pages:dev": "wrangler pages dev . --d1=jdue-cfv-db",
    "pages:deploy": "wrangler pages deploy . --commit-dirty=true",
    "db:migrate": "wrangler d1 execute jdue-cfv-db --file=./schema.sql"
  },
  "dependencies": {
    "@tsndr/cloudflare-worker-jwt": "^2.2.1",
    "bcryptjs": "^2.4.3",
    "itty-router": "^4.0.23",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "wrangler": "^3.60.0"
  }
}
